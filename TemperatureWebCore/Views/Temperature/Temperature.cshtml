        { "time": "2017-11-03T21:18:01", "temperature": 24.2 },
        { "time": "2017-11-04T21:18:01", "temperature": 27.2 },
        { "time": "2017-11-05T21:18:01", "temperature": 20.2 },
        { "time": "2017-11-06T21:18:01", "temperature": 19.2 },
        { "time": "2017-11-07T21:18:01", "temperature": 25.2 },
        { "time": "2017-11-08T21:18:01", "temperature": 26.2 },
        { "time": "2017-11-09T21:18:01", "temperature": 24.2 },
        { "time": "2017-11-10T21:18:01", "temperature": 28.2 },
