@section Scripts{ 
<script src="~/lib/amcharts/dist/amcharts/amcharts.js"></script>
<script src="~/lib/amcharts/dist/amcharts/serial.js"></script>
<script>
    var chartData = [
        { "time": "2017-11-01", "temperature": 21.2 },
        { "time": "2017-11-02", "temperature": 22.3 },
        { "time": "2017-11-03", "temperature": 24.2 },
        { "time": "2017-11-04", "temperature": 27.2 },
        { "time": "2017-11-05", "temperature": 20.2 },
        { "time": "2017-11-06", "temperature": 19.2 },
        { "time": "2017-11-07", "temperature": 25.2 },
        { "time": "2017-11-08", "temperature": 26.2 },
        { "time": "2017-11-09", "temperature": 24.2 },
        { "time": "2017-11-10", "temperature": 28.2 },
        { "time": "2017-11-11", "temperature": 29.2 },
        { "time": "2017-11-12", "temperature": 31.2 },
        { "time": "2017-11-13", "temperature": 29.2 },
        { "time": "2017-11-14", "temperature": 28.2 },
        { "time": "2017-11-15", "temperature": 27.5 }
    ];

    AmCharts.makeChart("chartdiv",
        {
            "type": "serial",
            "categoryField": "time",
            "dataDateFormat": "YYYY-MM-DD",
            "precision": 1,
            "categoryAxis": {
                "parseDates": true
            },
            "chartCursor": {
                "enabled": true
            },
            "chartScrollbar": {
                "enabled": true
            },
            "trendLines": [],
            "graphs": [
                {
                    "bullet": "round",
                    "id": "AmGraph-1",
                    "title": "graph 1",
                    "valueField": "temperature"
                }
            ],
            "guides": [],
            "valueAxes": [
                {
                    "id": "ValueAxis-1",
                    "title": ""
                }
            ],
            "allLabels": [],
            "balloon": {},
            "titles": [
                {
                    "id": "Title-1",
                    "size": 15,
                    "text": "Daily temperatures"
                }
            ],
            "dataProvider": chartData
        }
    );
</script>
}
<div style="margin:10px"></div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Temperature</th>
            <th>Value</th>
            <th>Date/time</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Current</td>
            <td style="text-align:center">@ViewBag.CurrentTemp&deg;</td>
            <td>@ViewBag.CurrentTime</td>
        </tr>
        <tr>
            <td>Max</td>
            <td style="text-align:center">@ViewBag.MaxTemp&deg;</td>
            <td>@ViewBag.MaxTime</td>
        </tr>
        <tr>
            <td>Min</td>
            <td style="text-align:center">@ViewBag.MinTemp&deg;</td>
            <td>@ViewBag.MinTime</td>
        </tr>
    </tbody>
</table>

<div style="margin:10px"></div>

<div id="chartdiv" style="width: 100%; height: 400px; background-color: #FFFFFF;"></div>
